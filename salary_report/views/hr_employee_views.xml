<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_inherit_salary_report" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.salary.report</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='payroll_group']" position="inside">
                    <field name="employee_bank_code"/>
                    <field name="employee_account_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
